<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Movie @ViewBag.Title</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">WSJ</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
					<ul class="navbar-nav flex-grow-1">
						<li class="nav-item">
							<a class="navbar-brand" asp-page="/Goodss/Index">Goods</a>
						</li>
						<li class="nav-item">
							<a class="navbar-brand" asp-page="/Groups/Index">Groups</a>
						</li>
						<li class="nav-item">
							<a class="navbar-brand" asp-page="/Items/Index">Items</a>
						</li>
						<li class="nav-item">
							<a class="navbar-brand" asp-page="/Options/Index">Options</a>
						</li>
						<li class="nav-item">
							<a class="navbar-brand" asp-page="/Userhs/Index">Userhs</a>
						</li>
						<li class="nav-item">
							<a class="navbar-brand" asp-area="" asp-page="/Privacy">Privacy</a>
						</li>
						<li class="nav-item">
							<a class="navbar-brand" asp-page="/Movies/Index">Movie</a>
						</li>
						<li class="nav-item">
							@Html.ActionLink("Students", "Index", "Student")
						</li>
						<li class="nav-item">
							@Html.ActionLink("Courses", "Index", "Course")
						</li>
						<li class="nav-item">
							@Html.ActionLink("Instructors", "Index", "Instructor")
						</li>
						<li class="nav-item">
							@Html.ActionLink("Departments", "Index", "Department")
						</li>
					</ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - WSJ - <a asp-area="" asp-page="/Privacy">Privacy</a>
			<p>@DateTime.Now</p>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
